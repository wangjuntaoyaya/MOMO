<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/plaer_item_layout"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="220dp"

    android:id="@+id/play_view_my">
    <com.facebook.drawee.view.SimpleDraweeView

        fresco:roundedCornerRadius="5dp"
        android:id="@+id/video_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      ></com.facebook.drawee.view.SimpleDraweeView>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginRight="8dp"
            android:id="@+id/video_time"
            android:background="#9964646F"
            android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="12sp"
        android:text="8:56"></androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_watch"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="50W人观看"></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_danmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5066弹幕"
            android:textColor="@color/white"
            android:textSize="12sp"></androidx.appcompat.widget.AppCompatTextView>


    </LinearLayout>


</RelativeLayout>

    <RelativeLayout


        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/video_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/video_more"
            android:background="@drawable/home_tag_shape_btn"
            android:text="暑假爆肝"
            android:textSize="12sp">

        </Button>

        <ImageView
            android:id="@+id/video_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            android:background="@drawable/ic_more_gray"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/user_image"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_user_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="sada"
                android:textSize="12sp"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_publish_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tsddsddddagsada"
                android:textSize="12sp">

            </androidx.appcompat.widget.AppCompatTextView>
        </LinearLayout>


        <com.example.momo.widget.AutoLineTextView
            android:id="@+id/title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_image"
            android:gravity="start"
            android:lines="1"
            android:text="撒旦教asOK打架啊隆dada盛科技sdddddddddddddddddd的dsdsdsadadasdads"


            android:textSize="15sp">

        </com.example.momo.widget.AutoLineTextView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"


            fresco:roundAsCircle="true">

        </com.facebook.drawee.view.SimpleDraweeView>


    </RelativeLayout>
</LinearLayout>