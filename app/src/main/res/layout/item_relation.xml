<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"

    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="120dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="3dp"
        fresco:roundedCornerRadius="5dp"
        android:id="@+id/relation_image"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:layout_height="match_parent"
        fresco:progressBarImage="@drawable/ic_02"
        android:layout_weight="0.6"
        >


    </com.facebook.drawee.view.SimpleDraweeView>
    <LinearLayout

        android:padding="1dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/relation_title"
            android:layout_weight="1"
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:text="这是一个标题"

            android:layout_height="wrap_content">


        </androidx.appcompat.widget.AppCompatTextView>
        <Button
            android:gravity="center"
            android:id="@+id/relation_up_name"
           android:button="@null"
            android:layout_weight="1"
            android:paddingLeft="6dp"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/kongbai_button"
            android:text="momo"


            android:drawableLeft="@drawable/ic_info_up">

        </Button>
        <RadioGroup

            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"


            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/relation_watch"
                android:layout_weight="0.8"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_info_watching"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.0万"

            >


        </RadioButton>

            <RadioButton
                android:id="@+id/relation_danmu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="0.8"
                android:button="@null"
                android:drawableLeft="@drawable/bili_player_danmaku_is_open"
                android:drawablePadding="6dp"
                android:padding="3dp"
                android:text="300弹幕"

                >


            </RadioButton>

            <RadioButton

                android:layout_weight="1"
             android:button="@null"
                android:layout_width="0dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_more_gray"
                android:layout_height="wrap_content">


            </RadioButton>

        </RadioGroup>

    </LinearLayout>



</LinearLayout>
