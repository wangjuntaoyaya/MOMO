<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:layout_height="match_parent">


    <EditText
        android:gravity="center|left"
   android:layout_marginTop="10dp"
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="最近搜索 sds"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_hint_search"
        android:background="@drawable/edit_shape">

    </EditText>
    <FrameLayout
     android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"

            android:text="大家都在搜"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:id="@+id/sercher_expand"
            android:gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/kongbai_button"
            android:text="展开">


        </Button>


    </FrameLayout>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        zhy:max_select="-1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

    </com.zhy.view.flowlayout.TagFlowLayout>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout01"
        zhy:max_select="-1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

    </com.zhy.view.flowlayout.TagFlowLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/search_guanggao"
        android:padding="6dp"
        android:layout_width="match_parent"
        fresco:roundedCornerRadius="6dp"
        android:layout_height="160dp"

        ></com.facebook.drawee.view.SimpleDraweeView>
    <FrameLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"

            android:text="搜索厉害"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

        </TextView>

        <Button

            android:gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/kongbai_button"
            android:text="展开">


        </Button>


    </FrameLayout>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout02"
        zhy:max_select="-1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

    </com.zhy.view.flowlayout.TagFlowLayout>




</LinearLayout>
